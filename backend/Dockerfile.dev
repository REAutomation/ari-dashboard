FROM node:20-alpine

WORKDIR /app

# Ensure /tmp exists and is writable for tsx
RUN mkdir -p /tmp && chmod 1777 /tmp

# Install dependencies first (cached layer)
COPY package*.json ./
RUN npm install

# Source code will be mounted as volume
# No COPY of source needed for dev

EXPOSE 3000

# Use tsx watch for hot-reload
CMD ["npm", "run", "dev"]
